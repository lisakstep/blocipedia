<h1>All Wikis</h1>
<% if policy(Wiki.new).create? %>
  <%= link_to "New wiki", new_wiki_path, class: 'btn btn-success' %>
<% end %>
<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
       <small>
         last updated <%= time_ago_in_words(wiki.updated_at) %> ago by <%= wiki.user.name %><br/>
       </small>
    </div>
  </div>
<% end %>
